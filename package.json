{
  "name": "vc4sm-frontend",
  "version": "0.1.0",
  "description": "A frontend for an API that provides education verifiable credentials to university students.",
  "main": "src/vc4sm-frontend.js",
  "license": "LGPL-2.1-or-later",
  "private": true,
  "workspaces": [
    "vendor/toolkit/packages/*"
  ],
  "scripts": {
    "build": "rollup -c --environment BUILD:local",
    "i18next": "i18next-scanner",
    "watch": "rollup -c --watch",
    "watch-full": "rollup -c --watch --environment FORCE_FULL",
    "watch-bs": "rollup -c --watch --environment BUILD:bs",
    "test": "rollup -c --environment BUILD:test && karma start --singleRun",
    "test-full": "rollup -c --environment FORCE_FULL,BUILD:test && karma start --singleRun",
    "lint": "eslint ."
  },
  "repository": "git+https://github.com/PeterTheOne/vc4sm-frontend.git",
  "keywords": [
    "education",
    "ssi",
    "vc",
    "did",
    "credentials",
    "university"
  ],
  "author": "Peter Grassberger <p.grassberger@student.tugraz.at> (https://petergrassberger.com)",
  "homepage": "https://github.com/PeterTheOne/vc4sm-frontend#readme",
  "bugs": {
    "url": "https://github.com/PeterTheOne/vc4sm-frontend/issues"
  },
  "dependencies": {
    "@dbp-toolkit/app-shell": "^0.2.2",
    "@dbp-toolkit/auth": "^0.2.2",
    "@dbp-toolkit/common": "^0.2.2",
    "@dbp-toolkit/language-select": "^0.1.0",
    "@dbp-toolkit/notification": "^0.2.2",
    "@dbp-toolkit/person-profile": "^0.2.2",
    "@open-wc/scoped-elements": "^1.1.1",
    "i18next": "^19.5.1",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "semver": "^7.3.4",
    "source-sans-pro": "^2.45.0",
    "webcomponent-qr-code": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-url": "^5.0.1",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chokidar": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-plugin-jsdoc": "^30.6.4",
    "glob": "^7.1.6",
    "i18next-scanner": "^3.0.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^8.0.1",
    "rollup": "^2.18.1",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-emit-ejs": "^3.1.0",
    "rollup-plugin-license": "^2.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "selfsigned": "^1.10.7"
  }
}
